" Syntax highlighting
syntax on
syntax enable

filetype on
filetype plugin indent on
set backspace=indent,eol,start
set ts=4 sw=4 tw=100

" Hightlight search results, cancel by nohls
set hls
" Starts to search when typing
set incsearch

set history=1000

"ignore vi mode
set nocompatible
set cursorline
set autoindent
set smartindent
set smarttab
set showmatch
set wildmenu
set ruler
set noerrorbells
set expandtab
set nu
set rnu
set cmdheight=2
